! waveqlab3d input file: test problem for mms on cartesian grid with friction

&problem_list
 name = 'upwind_6_pml-on_anelastic-c2_ref',
 problem = 'TPV5',
 nblocks = 2,
 t_final =  8d0,
 CFL = 0.5d0,
 coupling='locked',
 type_of_mesh='cartesian',
 material_source='hardcode',
 fd_type = 'upwind',
 order = 6,
 response = 'anelastic',
 w_stride = 1,
 w_fault = F /

&block_list = 'block_list_pml-off.txt' /


! boundary conditions
0 = Material Interface
1 = Characteristics (absorbing / non-reflecting)
2 = Free surface

&moment_list
 use_moment_tensor = T,
 order = 4,
 ! When a tensor source lies on the shared plane/interface between blocks it can be
 ! contained in both blocks. Default is block 1; set to 2 to prefer block 2.
 tensor_block_preference = 1 /


! source_type  duration  t_init  mXX  mYY  mZZ  mXY  mXZ  mYZ  x  y  z  alpha


!---begin:tensor_list---
'Cos-Bell' 0d0 0.2d0 0d0 0d0 0d0 0d0 -10d0 0d0 5d0 1.8d0 5d0 0 
!---end:tensor_list---

&anelastic_list
 c = 2.0d0,
 weight_exp = 0.6d0,
 fref = 1.0d0 / 

&mms_list
 use_mms = F /

&output_list
 output_exact_moment = F,
 output_seismograms = T,
 output_fault_topo = F,
 output_fields_block1 = F,
 output_fields_block2 = F,
 stride_fields = 1,
 station_xyz_index = T,
 station_list = 'exfile',
 station_list_file = 'station_list.txt',
 station_file_directory = 'dat',
 output_station_info = F,
 debug_station_info = F,
 save_debug_station = F,
/

&plane_output_list
 enable_plane_output = F,
 nplanes = 1,
 plane_axis(1) = 'xz',
 plane_coord(1) = 0d0,
 plane_name(1) = 'y0',
 plane_file_directory = 'P',
 plane_stride = 1 /



